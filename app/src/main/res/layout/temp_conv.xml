<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#FFFFFF">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Temperature Converter"
    android:textSize="16dp"
    android:layout_margin="24dp"
    android:textColor="#000000"
    android:layout_centerHorizontal="true"/>
  <EditText
    android:id="@+id/editTextF"
    android:inputType="numberDecimal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="96dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:hint="Fahrenheit"
    android:ems="8"/>

  <EditText
    android:id="@+id/editTextC"
    android:inputType="numberDecimal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/editTextF"
    android:layout_margin="8dp"
    android:layout_centerHorizontal="true"
    android:ems="8"
    android:hint="Celsius"/>

  <EditText
    android:id="@+id/editTextK"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/button5"
    android:layout_centerHorizontal="true"
    android:ems="8"
    android:hint="Kelvin"
    android:inputType="numberDecimal"/>
  <Button
    android:id="@+id/button2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/editTextF"
    android:layout_toEndOf="@+id/editTextF"
    android:text="K"/>
  <Button
    android:id="@+id/button5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/editTextC"
    android:layout_toStartOf="@+id/editTextF"
    android:text="F"/>
  <Button
    android:id="@+id/button4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/editTextC"
    android:layout_toEndOf="@+id/editTextF"
    android:text="K"/>
  <Button
    android:id="@+id/button6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/editTextC"
    android:layout_toEndOf="@+id/editTextF"
    android:text="C"/>
  <Button
    android:id="@+id/button3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/editTextC"
    android:layout_toStartOf="@+id/editTextF"
    android:text="F"/>
  <Button
    android:id="@+id/button1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/editTextF"
    android:layout_toStartOf="@+id/editTextF"
    android:text="C"/>

  <Button
    android:id="@+id/button7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:text="Reset"/>

  <TextView
    android:id="@+id/c_celsius"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_alignStart="@+id/button5"
    android:layout_centerVertical="true"
    android:text="C = Celsius"
    android:textColor="#000000"
    android:textSize="16dp"/>
  <TextView
    android:id="@+id/f_farhenheit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_alignStart="@+id/button5"
    android:layout_below="@+id/c_celsius"
    android:text="F = Farhenheit"
    android:textColor="#000000"
    android:textSize="16dp"/>
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_alignStart="@+id/button5"
    android:layout_below="@+id/f_farhenheit"
    android:text="K = Kelvin"
    android:textColor="#000000"
    android:textSize="16dp"/>

</RelativeLayout>